BUILD_INITRD_AMD64 := $(abspath $(dir $(lastword $(MAKEFILE_LIST))))

include $(ONL)/make/config.mk

ONL_BUILD_CONFIG := x86_64

# Release string, copied from swi.mk
ifndef RELEASE
RELEASE := Open Network Linux$(ONL_RELEASE_BANNER)($(ONL_BUILD_CONFIG),$(ONL_BUILD_TIMESTAMP),$(ONL_BUILD_SHA1))
endif

initrd-amd64: $(BUILD_INITRD_AMD64)/initrd-amd64

$(ONL_SUBMODULE_LOADER)/.setup.done:
	$(MAKE) -C $(ONL_SUBMODULE_LOADER) setup
	touch $(ONL_SUBMODULE_LOADER)/.setup.done

$(BUILD_INITRD_AMD64)/initrd-amd64: $(ONL_SUBMODULE_LOADER)/.setup.done
	$(MAKE) -C $(ONL_SUBMODULE_LOADER) platform-configs
	$(MAKE) -C $(ONL_SUBMODULE_LOADER) ONL_RELEASE="$(RELEASE)" buildroot-x86_64
	cat $(ONL_SUBMODULE_LOADER)/buildroot-x86_64/images/rootfs.cpio.gz >initrd-amd64

.PHONY: deb $(BUILD_INITRD_AMD64)/initrd-amd64

deb:
	$(MAKE) -C deb












