diff --git a/board/freescale/as5700_96x/img_updt.c b/board/freescale/as5700_96x/img_updt.c
new file mode 100644
index 0000000..c2f2110
--- /dev/null
+++ b/board/freescale/as5700_96x/img_updt.c
@@ -0,0 +1,188 @@
+#include <common.h>
+#include <command.h>
+#include <malloc.h>
+#include <net.h>
+
+extern ulong load_addr;
+extern char BootFile[];
+
+#define MAX_IMAGE_TARGET_NAME_LEN 20
+
+struct img_updt {
+    char *image_name; /* length of image_name < MAX_IMAGE_TARGET_NAME_LEN */
+    char *file_name;
+    unsigned long addr;
+    unsigned long size;
+};
+
+enum {
+    IMG_UPDT_RCW,
+    IMG_UPDT_ONIE,
+    IMG_UPDT_DIAG,
+    IMG_UPDT_FMAN,
+    IMG_UPDT_UBOOT,
+    IMG_UPDT_NULL,
+};
+
+static struct img_updt imgs[] = {
+    {"rcw",   "as5700_96x_rcw_1_4_0_1.bin",            0xe8000000, 0x00020000}, /*128KB*/
+    {"onie",  "as5700_96x-onie_1_4_0_2.bix",           0xe8040000, 0x00d00000}, /*13MB*/
+    {"diag",  "as5700_96x-diag_1_4_0_3.bix",           0xe8d40000, 0x01400000}, /*20MB*/
+    {"fman",  "fsl_fman_ucode_p2041_r2.0_106_1_9.bin", 0xeff40000, 0x00020000}, /*128KB*/
+    {"uboot", "as5700_96x_uboot_1_4_0_1.bin",          0xeff80000, 0x00080000}, /*512KB*/
+    {NULL,                              NULL,                 0x0,        0x0},
+};
+
+static int img_update_func(struct img_updt *img)
+{
+    unsigned long crc_ram, crc_flash;
+    unsigned long load_size = 0;
+    char* s;
+	int ret;
+	int addr_start, addr_last;
+
+    /*tftp file to memory*/
+    if ((s = getenv("loadaddr")) != NULL) {
+        load_addr = simple_strtoul(s, NULL, 16);
+    }
+
+    copy_filename(BootFile, img->file_name, sizeof(BootFile));
+
+    ret = NetLoop(TFTPGET);
+    if(ret <= 0) {
+        puts("TFTP fail\n");
+        return 1;
+    } else {
+        load_size = ret;
+    }
+
+    /*calculate crc32*/
+    crc_ram = crc32_wd(0, (const uchar *)load_addr, load_size, CHUNKSZ_CRC32);
+    printf("CRC32-TFTP(%08lx ~ %08lx): %08lx\n",
+           load_addr, load_addr+load_size-1, crc_ram);
+
+    /*protect off*/
+	addr_start = img->addr;
+	addr_last  = img->addr + img->size - 1;
+	ret = flash_sect_protect(0, addr_start, addr_last);
+	if (ret != 0) {
+		printf("Unprotecting flash failed (0x%08x ~ 0x%08x)\n",
+		       addr_start, addr_last);
+		flash_perror(ret);
+		return -1;
+	}
+
+    /*erase*/
+	ret = flash_sect_erase(addr_start, addr_last);
+	if (ret != 0) {
+		printf("Erasing flash failed (0x%08x - 0x%08x)\n",
+		       addr_start, addr_last);
+		flash_perror(ret);
+		return -1;
+	}
+
+	/* flash write */
+	ret = flash_write((char *)load_addr, addr_start, img->size);
+	if (ret != 0) {
+		printf("Writing %d bytes to flash addr 0x%08x failed.\n",
+		       (int)img->size, addr_start);
+		flash_perror(ret);
+		return -1;
+	}
+
+	/* protect on */
+	ret = flash_sect_protect(1, addr_start, addr_last);
+	if (ret != 0) {
+		printf("Protecting flash range 0x%08x - 0x%08x failed.\n",
+		       addr_start, addr_last);
+		flash_perror(ret);
+		return -1;
+	}
+
+    /*calculate crc32*/
+    crc_flash = crc32_wd (0, (const uchar *)img->addr, load_size, CHUNKSZ_CRC32);
+    printf("CRC32-Flash(%08lx ~ %08lx): %08lx\n",
+            img->addr, img->addr+load_size-1, crc_flash);
+
+    if(crc_flash==crc_ram) {
+        puts ("CRC OK!\n");
+    } else {
+        puts ("WARNING: CRC is NOT correct!\n");
+    }
+
+    return 0;
+}
+
+static int do_img_update(cmd_tbl_t *cmdtp, int flag, int argc, char * const argv[])
+{
+    struct img_updt updtImg;
+    struct img_updt *updtImgPtr = NULL;
+    int i;
+    char *strBuf = NULL;
+    const char* str = "image_name_";
+    char *file_name;
+    int rc = 0;
+
+    if (argc == 2) {
+        /*default filename/address/size */
+        for (i=0; imgs[i].image_name != NULL; i++) {
+            if ( 0 == strcmp(argv[1], imgs[i].image_name) ) {
+                updtImgPtr = &imgs[i];
+
+                strBuf = (char *) malloc(12+MAX_IMAGE_TARGET_NAME_LEN);
+                if(strBuf!=NULL) {
+                    strBuf = strcpy(strBuf, str);
+                    strBuf = strcat(strBuf, updtImgPtr->image_name);
+                }
+
+                /* get file name from uboot env */
+                if ((file_name = getenv(strBuf)) == NULL) {
+                    printf("env \"%s\" is not defined, using default file name %s\n",
+                           strBuf, updtImgPtr->file_name);
+                } else {
+                    updtImgPtr->file_name = file_name;
+/*                    printf("using env %s = %s", strBuf, updtImgPtr->file_name);*/
+                }
+            }
+        }
+
+        if (updtImgPtr == NULL) {
+            printf("Unknown image\n");
+            return 1;
+        }
+    } else if (argc == 5) {
+        /*user specified filename/address/size */
+        updtImg.image_name = argv[1];
+        updtImg.file_name = argv[2];
+        updtImg.addr = simple_strtoul (argv[3], NULL, 16);
+        updtImg.size = simple_strtoul (argv[4], NULL, 16);
+        updtImgPtr = &updtImg;
+    } else {
+        return CMD_RET_USAGE;
+    }
+
+    printf("\n\tUpgrade %s ...... \n", updtImgPtr->image_name);
+    printf("\tFilename: %s\n", updtImgPtr->file_name);
+    printf("\tProgram NOR flash at: 0x%08x\n", (unsigned int)updtImgPtr->addr);
+    printf("\tPartition Size: 0x%08x\n\n", (unsigned int)updtImgPtr->size);
+
+    rc = img_update_func(updtImgPtr);
+    if (rc != 0) {
+        printf("Fail to update image\n");
+    }
+
+    free(strBuf);
+
+    return rc;
+}
+
+U_BOOT_CMD(
+    img_update,  5,  1,  do_img_update,
+    "update specific image to NOR flash and check CRC32",
+    "[image] [[filename] [address] [size]]\n"
+    "    - update specific image to NOR flash and check CRC32\n"
+    "      [image] could be rcw/onie/diag/fman/uboot\n"
+    "      [filename/address/size] will use default if not specified.\n"
+    "For example:\n"
+    "    img_update uboot as5700_96x_uboot-1-4-0-1.bin 0xeff80000 0x80000\n"
+);
