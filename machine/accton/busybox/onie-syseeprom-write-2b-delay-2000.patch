Enlarge the delay time of writing 2 bytes

diff --git a/miscutils/24cXX.c b/miscutils/24cXX.c
index b448761..0042ac0 100644
--- a/miscutils/24cXX.c
+++ b/miscutils/24cXX.c
@@ -40,11 +40,19 @@ static int i2c_write_1b(struct eeprom *e, __u8 buf)
 static int i2c_write_2b(struct eeprom *e, __u8 buf[2])
 {
 	int r;
+	int i = 5;
 	// we must simulate a plain I2C byte write with SMBus functions
-	r = i2c_smbus_write_byte_data(e->fd, buf[0], buf[1]);
+	do
+	{
+		r = i2c_smbus_write_byte_data(e->fd, buf[0], buf[1]);
+		if (!r)
+			break;
+		i--;
+		usleep(2000);
+	} while (i > 0);
 	if(r < 0)
 		fprintf(stderr, "Error i2c_write_2b: %s\n", strerror(errno));
-	usleep(1000);
+	usleep(2000);
 	return r;
 }
 
